{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Contenu du Panier
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Produit</th>
				<th>Quantite</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>

			{% for contenu_panier in contenu_paniers %}
				<tr>
					<td>{{ contenu_panier.id }}</td>

					<td>{{ contenu_panier.Panier.getId}}</td>

					<td>{{ contenu_panier.Quantite }}</td>
					<td>{{ contenu_panier.Date ? contenu_panier.Date|date('Y/m/d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('contenu_panier_show', {'id': contenu_panier.id}) }}">show</a>
						<a href="{{ path('contenu_panier_edit', {'id': contenu_panier.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>


	{% if contenu_paniers %}
		<!--	{% include "panier/_delete_form.html.twig" with { 'panier' : contenu_paniers.0.panier}  %}
								 -->
	{% endif %}

{% endblock %}
